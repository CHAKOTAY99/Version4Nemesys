@model Version4Nemesys.ViewModels.HazardViewModel

@{
    ViewData["Title"] = "Create Hazard";
}

<h1>Create</h1>

<h4>Create a Hazard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHazard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HazardName" class="control-label"></label>
                <input asp-for="HazardName" class="form-control" />
                <span asp-validation-for="HazardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
