@model Version4Nemesys.ViewModels.InvestigationViewModel
@using Version4Nemesys.Models.Enums

@{
    ViewData["Title"] = "Edit";
    var Investigation = ViewBag.Investigation;
}

<h1>Edit</h1>

<h4>InvestigationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditInvestigation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvestigationID" />
            @Html.DisplayFor(InvestigationModel => InvestigationModel.InvestigationID)
            <input type="hidden" asp-for="ActionDate" />
            @Html.DisplayFor(InvestigationModel => InvestigationModel.Investigation.ActionDate)
            <input type="hidden" asp-for="ReportUsed" />
            <div class="form-group">
                <label asp-for="InvestigationDescription" class="control-label"></label>
                <input asp-for="InvestigationDescription" class="form-control" value="@Model.Investigation.InvestigationDescription" />
                <span asp-validation-for="InvestigationDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvestigationsInTest" class="control-label"></label>
                <select asp-for="InvestigationsInTest" asp-items="Html.GetEnumSelectList<InvestigationTest>()" value="@Model.Investigation.InvestigationsInTest">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="InvestigationsInTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

